#######################################
# The following is an example .env file for the 
# Polarity Slack Bot.  All credentials are samples only.
# You must replace example credentials with your actual credentials
# and save this file as `.env`
#######################################

########################################
# Slack configuration
########################################

# OAuth access token for the bot user
POLARITY_SLACK_BOT_TOKEN=xoxb-1234567890123-1234567890123-AbCdEfGhIjKlMnOpQrStUv

# Secret used to verify Slack request signatures
POLARITY_SLACK_BOT_SIGNING_SECRET=8f0c6e1a4bd6c8e3c4d5f6a7b8c9d0e

# App-level token (required when using Socket Mode)
POLARITY_SLACK_BOT_APP_TOKEN=xapp-1-A0123456789-0123456789012-abcdef1234567890abcdef1234567890

########################################
# Polarity configuration
########################################

# Polarity API Key for calling the Polarity REST API (requires version 5.5+ of Polarity Server)
POLARITY_API_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.ExampleTokenPayload.SIGNATURE

# Hostname (without protocol) of the Polarity server
POLARITY_HOST=polarity.example.com

# Set to the string "true" to ignore TLS certificate errors (useful for self-signed certs)
POLARITY_IGNORE_TLS_ERRORS=false

########################################
# Proxy settings (optional)
########################################

#HTTPS_PROXY=https://proxy.example.com:8080
#HTTP_PROXY=http://proxy.example.com:8080

########################################
# Optional overrides
########################################

# Comma-separated list of Slack member IDs that should be treated as admins for the Slack Bot
# even if they are not workspace admins/owners. Admins have an ability to refresh which integrations
# are searched after permissions changes are made to the Polarity API key configured for the bot.
# Example: U123ABC,U456DEF
# To view your member id:
#   • Click your name under "Direct Message" 
#   • Click your avatar (top-left).
#   • In the pop-up, click “View full profile”.
#   • In the three-dot “More” menu choose “Copy member ID”.
#   • The clipboard now contains something like U012ABCDEF which is your member id
POLARITY_SLACK_BOT_ADMIN_MEMBER_IDS=
